{
  "rules": {
    ".read": false,
    ".write": false,
    "boards": {
      "$boardId": {
        ".read": "data.child('users').child(auth.uid).val() !== null"
      }
    },
    "users": {
      "$userId": {
        ".read": "$userId === auth.uid"
      }
    },
    "boardInvites": {
      "$boardId": {
        ".write": "root.child('boards').child($boardId).child('owner').val() === auth.uid"
      }
    },
    "sounds": {
      "$boardId": {
        ".write": "root.child('boards').child($boardId).child('users').val().contains(auth.uid)"
      }
    }
  }
}
